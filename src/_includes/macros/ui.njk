{% macro sectionHeader(eyebrow, title, subtitle) %}
<div class="section-header text-left">
  {% if eyebrow %}<p class="text-sm uppercase tracking-wide text-gray-600 mb-1">{{ eyebrow }}</p>{% endif %}
  <h2 class="text-2xl font-semibold">{{ title }}</h2>
