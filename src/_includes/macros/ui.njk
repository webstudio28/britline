{# Section header â€” text-left per alignment docs #}
{% macro sectionHeader(eyebrow, title, subtitle) %}
<div class="section-header text-left mb-8 md:mb-10">
  {% if eyebrow %}<p class="text-sm uppercase tracking-wide text-brand-blue/80 mb-1">{{ eyebrow }}</p>{% endif %}
  <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-brand-blue">{{ title }}</h2>
  {% if subtitle %}<p class="mt-2 text-brand-blue/80 leading-relaxed max-w-2xl">{{ subtitle }}</p>{% endif %}
</div>
{% endmacro %}

