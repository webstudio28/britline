<section class="section-padding bg-brand-buttercream" id="services">
  <div class="container-custom">
    {% from "macros/ui.njk" import sectionHeader, button %}
    {% set s = home.services %}
    {{ sectionHeader(s.eyebrow, s.title, s.subtitle) }}
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
      {% for item in s.items %}
      <div class="flex flex-col">
        <img src="{{ ('/assets/images/' + item.image) | url }}" alt="{{ item.title }}" class="aspect-square w-full object-cover rounded-2xl mb-4" loading="lazy">
        <h3 class="text-xl font-bold text-brand-blue mb-2">{{ item.title }}</h3>
        <p class="text-brand-blue/80 mb-4 flex-1">{{ item.description }}</p>
        <a href="#contact" class="inline-flex items-center justify-center rounded-2xl border-2 border-brand-blue text-brand-blue font-semibold px-4 py-2 text-sm hover:bg-brand-blue hover:text-white transition-colors w-fit">{{ item.cta }}</a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
