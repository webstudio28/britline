<section class="relative min-h-[90vh] flex items-center overflow-hidden text-white" id="hero">
  <div class="absolute inset-0 z-0">
    <img src="{{ ('/assets/images/' + home.hero.image) | url }}" alt="" class="w-full h-full object-cover" fetchpriority="high">
    <div class="absolute inset-0 bg-black/65" aria-hidden="true"></div>
  </div>
  <div class="container-custom relative z-10 section-padding w-full">
    <div class="flex flex-col lg:grid lg:grid-cols-2 gap-10 lg:gap-12 items-center">
      <div class="text-left max-w-xl">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-4">{{ home.hero.headline }}</h1>
        <p class="text-lg text-white/90 mb-6">{{ home.hero.paragraph }}</p>
        <a href="https://wa.me/{{ site.contact.whatsapp }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-white/85 backdrop-blur-md rounded-2xl px-5 py-3 shadow-lg border border-white/30 text-[#128C7E] hover:bg-white/95 w-fit" aria-label="Chat on WhatsApp">
          {% from "macros/ui.njk" import icon %}
          {{ icon('whatsapp') }}
          <span class="font-semibold">WhatsApp</span>
        </a>
      </div>
      <div class="w-full max-w-md bg-white/95 rounded-3xl shadow-xl p-6 md:p-8 text-brand-blue">
        <form action="#contact" method="get" class="flex flex-col gap-4">
          <div>
            <label for="hero-from" class="block text-sm font-medium mb-1">{{ home.hero.booking.fromLabel }}</label>
            <input type="text" id="hero-from" name="from" placeholder="e.g. Heathrow T5" class="w-full rounded-xl border border-gray-200 px-4 py-3 focus:ring-2 focus:ring-brand-blue/30 focus:border-brand-blue outline-none" autocomplete="off">
          </div>
          <div>
            <label for="hero-to" class="block text-sm font-medium mb-1">{{ home.hero.booking.toLabel }}</label>
            <input type="text" id="hero-to" name="to" placeholder="e.g. Central London" class="w-full rounded-xl border border-gray-200 px-4 py-3 focus:ring-2 focus:ring-brand-blue/30 focus:border-brand-blue outline-none" autocomplete="off">
          </div>
          <button type="submit" class="w-full rounded-2xl bg-brand-blue text-white font-semibold py-3 px-4 hover:opacity-90 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/50">{{ home.hero.booking.buttonLabel }}</button>
        </form>
      </div>
    </div>
  </div>
</section>
